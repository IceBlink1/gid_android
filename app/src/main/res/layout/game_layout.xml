<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GIDTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/game_recyclerview"
        style="@style/GIDTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/game_header_imageview"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"


            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:gravity="top"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_page_videos_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"


            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:gravity="top"
            android:text="@string/about"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/game_about_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/add_wishlist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_wishlist" />

        <TextView
            android:id="@+id/game_price_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/game_comment_recyclerview">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>