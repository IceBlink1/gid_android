<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage.ChoosePlatformFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/platformsImageView"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/platformsTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:text="@string/defaultText" />

            <TextView
                android:id="@+id/platformsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/defaultText" />

            <CheckBox
                android:id="@+id/macCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/defaultText" />

            <CheckBox
                android:id="@+id/windowsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/defaultText" />

            <CheckBox
                android:id="@+id/linuxCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/defaultText" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/platformContinueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ContinueButton"
        android:theme="@style/BlueButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>