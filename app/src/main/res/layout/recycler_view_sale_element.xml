<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:background="@color/design_default_color_on_secondary">
<ImageView
    android:id="@+id/imgSale"
    android:layout_width="77dp"
    android:layout_height="103dp"
    android:src="@drawable/death_stranding_poster"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:padding="5dp"/>
    <TextView
        android:id="@+id/gameNameSale"
        android:layout_toRightOf="@id/imgSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Dead\nRedemption"
        android:textColor="@color/cardview_light_background"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oldPrice"
        android:text="$49.99"
        android:textColor="@color/cardview_dark_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPrice"
        android:text="$48.99"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/oldPrice"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"/>
    <ImageView
        android:id="@+id/platfSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mac"
        android:layout_alignParentRight="true"
        android:layout_above="@id/newPrice"
        android:padding="5dp"/>
    <ImageView
        android:id="@+id/platformsMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mac"
        android:layout_toRightOf="@id/imgSale"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/platformsWindows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_linux"
        android:layout_toRightOf="@id/platformsMac"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/platformsLinux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_windows"
        android:layout_toRightOf="@id/platformsWindows"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:visibility="gone"/>



</RelativeLayout>
